<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="195dp"
    android:layout_margin="@dimen/dp_5"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:stateListAnimator="@drawable/lift_on_touch"
    app:cardCornerRadius="@dimen/dp_4"
    app:cardElevation="@dimen/dp_4">

    <!--    app:contentPadding="@dimen/dp_4"-->
    <ImageView
        android:id="@+id/iv_video_cover"
        android:layout_width="match_parent"
        android:layout_height="112dp"
        android:layout_gravity="top"
        android:scaleType="centerCrop"
        android:src="@drawable/basedemo" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_gravity="bottom"
        android:layout_marginStart="@dimen/dp_12"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_video_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="@dimen/dp_12"
            android:ellipsize="end"
            android:lines="2"
            android:textColor="#212121"
            android:textSize="13sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_video_title"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="@dimen/dp_24"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_video_recommend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_7"
                android:textColor="@color/text_icon"
                android:background="@drawable/solid_circle_2dp_theme"
                android:ellipsize="end"
                android:lines="1"
                android:textSize="10sp"
                android:padding="@dimen/dp_2"
                android:visibility="gone"
                tools:ignore="SmallSp" />

            <TextView
                android:id="@+id/tv_video_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_7"
                android:background="@drawable/stroke_circle_2dp_theme"
                android:ellipsize="end"
                android:textColor="@color/colorPrimary"
                android:padding="@dimen/dp_2"
                android:paddingLeft="@dimen/dp_1"
                android:paddingRight="@dimen/dp_1"
                android:lines="1"
                android:textSize="10sp"
                android:visibility="gone"
                tools:ignore="SmallSp" />

            <TextView
                android:id="@+id/tv_video_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:textColor="#999999"
                android:textSize="12sp"
                android:visibility="gone" />
        </LinearLayout>

        <View
            android:layout_width="22dp"
            android:layout_height="44dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:background="#ffffff" />
    </RelativeLayout>


</androidx.cardview.widget.CardView>